extends ../layouts/index
block content
    div 
      h1 All Blogs
      div.container
          each blog in blogs
              div.card
                  img(src=blog.image, alt=blog.title)
                  div.card-content
                      h2= blog.title
                      p Author: #{blog.author}
                      p  #{blog.demoContent}
                      p  #{blog.updatedAt.toDateString()}
                      p.likes
                          i.fas.fa-thumbs-up
                          |  #{blog.likes}
                      p.read-more
                          a(href=`/api/blog/blogs/${blog._id}`) Read More
    style.
        .container {
            display: flex;
            flex-wrap: wrap;
            justify-content: space-around;
        }
        .card {
            background-color: #fff;
            border-radius: 5px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin: 20px;
            width: 300px;
            overflow: hidden;
            transition: transform 0.2s;
        }
        .card:hover {
            transform: scale(1.05);
        }
        .card img {
            width: 100%;
            height: auto;
            object-fit: cover;
        }
        .card-content {
            padding: 20px;
        }
        .card-content h2 {
            margin: 0 0 10px;
        }
        .card-content p {
            margin: 5px 0;
        }
        .card-content .likes {
            display: flex;
            align-items: center;
        }
        .card-content .likes i {
            margin-right: 5px;
        }
        .card-content .read-more {
            margin-top: 10px;
            text-align: right;
        }
        .card-content .read-more a {
            text-decoration: none;
            color: #007bff;
            font-weight: bold;
        }
        .card-content .read-more a:hover {
            text-decoration: underline;
        }