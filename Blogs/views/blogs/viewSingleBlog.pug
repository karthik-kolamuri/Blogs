extends ../layouts/index

block content
    div.container
        div.blog-header
            h1= blog.title
            img(src=blog.image, alt=blog.title)
        div.blog-content
            p Author: #{blog.author}
            p #{blog.demoContent}
            p #{blog.fullContent}
            p Created At: #{blog.createdAt.toDateString()}
            p Updated At: #{blog.updatedAt.toDateString()}
            p.likes
                i.fas.fa-thumbs-up
                |  #{blog.likes}
    style.
        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            display: flex;
            flex-direction: column;
            align-items: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.4);
        }
        .blog-header {
            text-align: center;
            width: 100%;
        }
        .blog-header img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            object-fit: cover;
        }
        .blog-content {
            margin-top: 20px;
            width: 100%;
        }
        .blog-content p {
            margin: 10px 0;
        }
        .likes {
            display: flex;
            align-items: center;
            cursor: pointer;
        }
        .likes i {
            margin-right: 5px;
        }
        @media (max-width: 600px) {
            .container {
                padding: 15px;
            }
            .blog-header h1 {
                font-size: 24px;
            }
            .blog-content p {
                font-size: 14px;
            }
        }